rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ============================
    // Users Collection
    // ============================
    match /users/{userId} {
      // Users can read and update their own user document.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Disallow deleting user documents for now.
      allow delete: if false;
      // Allow user creation.
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // ============================
    // Characters Collection
    // ============================
    match /characters/{characterId} {
      // Allow a user to read, update, and delete their own characters.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow a user to create characters for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow a user to LIST characters, but ONLY their own.
      // This is required for the app to fetch all of a user's characters at once.
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
    }

    // ============================
    // Accounts Collection
    // ============================
    match /accounts/{accountId} {
      // Allow a user to read, update, and delete their own accounts.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow a user to create accounts for themselves.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Allow a user to LIST accounts, but ONLY their own.
      // This is required for the app to fetch all of a user's accounts at once.
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
    }

    // ============================
    // User Configuration (for owned packs, etc.)
    // ============================
    match /userConfiguration/{userId}/{document=**} {
        allow read, write: if request.auth != null && userId == request.auth.uid;
    }

    // ============================
    // Public & Static Data
    // ============================
    match /publicProfiles/{userId} {
      allow read: if request.auth != null;
    }

    match /quests/{questId} {
      allow read: if true;
    }
  }
}
