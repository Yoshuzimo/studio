
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow logged-in users to read their own user data
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Allow any authenticated user to read public profiles
    match /publicProfiles/{userId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Allow logged-in users to manage their own characters
    match /characters/{characterId} {
      allow read, write, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Allow logged-in users to manage their own quest completions
    match /characters/{characterId}/questCompletions/{questId} {
        allow read, write, delete: if isSignedIn() && get(/databases/$(database)/documents/characters/$(characterId)).data.userId == request.auth.uid;
    }

    // Allow logged-in users to manage their own accounts
    match /accounts/{accountId} {
      allow read, write, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Allow logged-in users to manage their own configuration, including owned packs
    match /userConfiguration/{userId}/{subcollection}/{docId} {
        allow read, write, delete: if isSignedIn() && userId == request.auth.uid;
    }
    
    // Allow users to create suggestions for themselves, and allow anyone to read them.
    // Admins will have bypass access via the Admin SDK, but this rule allows creation.
    match /suggestions/{suggestionId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.suggesterId == request.auth.uid;
        // Updates can only be done by server-side logic (Admin SDK) for status changes/replies
        allow update: if false; 
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
