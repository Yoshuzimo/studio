rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwnerOf(userId) {
      return request.auth.uid == userId;
    }

    function isCreatingOwnData(userId) {
      return isSignedIn() && isOwnerOf(userId) && request.resource.data.userId == userId;
    }
    
    function requestingOwnData(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Collections
    match /users/{userId} {
      allow read: if isSignedIn() && (isOwnerOf(userId) || isAdmin());
      allow write: if isSignedIn() && isOwnerOf(userId);
      allow create: if isSignedIn(); // Allow any signed-in user to create their own user document
    }

    match /publicProfiles/{userId} {
      allow read: if true;
      allow write: if isSignedIn() && isOwnerOf(userId);
    }

    match /characters/{characterId} {
      allow get, write, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn() && request.query.where.get("userId") == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /accounts/{accountId} {
      allow get, write, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow list: if isSignedIn() && request.query.where.get("userId") == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    match /userConfiguration/{userId}/{subcollection}/{docId} {
       allow read, write: if isOwnerOf(userId);
    }
    
    // Suggestions
    match /suggestions/{suggestionId} {
        allow read: if isAdmin() || (isSignedIn() && resource.data.suggesterId == request.auth.uid);
        allow create: if isSignedIn() && request.resource.data.suggesterId == request.auth.uid;
        allow update: if isAdmin() || (isSignedIn() && resource.data.suggesterId == request.auth.uid);
    }
  }
}
