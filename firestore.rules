
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // Characters Collection
    // ========================================
    match /characters/{characterId} {
      allow get, update, delete: if isOwner();
      allow list: if isQueryingOwnData();
      allow create: if isCreatingOwnData();
    }

    // ========================================
    // Accounts Collection
    // ========================================
    match /accounts/{accountId} {
      allow get, update, delete: if isOwner();
      allow list: if isQueryingOwnData();
      allow create: if isCreatingOwnData();
    }

    // ========================================
    // Users Collection (Optional Profile Storage)
    // ========================================
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ========================================
    // Helper Functions
    // ========================================
    function isOwner() {
      return request.auth != null &&
             resource.data.userId == request.auth.uid;
    }

    function isCreatingOwnData() {
      return request.auth != null &&
             request.resource.data.userId == request.auth.uid;
    }

    // This function ensures that any query on a collection
    // MUST include a 'where' clause filtering by the user's own ID.
    // This is the secure way to handle list operations.
    function isQueryingOwnData() {
      return request.auth != null &&
             request.query.where.userId == request.auth.uid;
    }
  }
}
