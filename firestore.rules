rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========================================
    // Helper Functions
    // ========================================
    function isOwner() {
      return request.auth != null &&
             resource.data.userId == request.auth.uid;
    }

    function isCreatingOwnData() {
      return request.auth != null &&
             request.resource.data.userId == request.auth.uid;
    }

    // Corrected function: Checks if the query is filtering by the user's own ID.
    // NOTE: ".exists()" is not valid here. The direct comparison is what works.
    function isQueryingOwnData() {
      return request.auth != null &&
             request.query.where.userId == request.auth.uid;
    }

    // ========================================
    // Characters Collection
    // ========================================
    match /characters/{characterId} {
      allow get, update, delete: if isOwner();
      allow list: if isQueryingOwnData();
      allow create: if isCreatingOwnData();
    }

    // ========================================
    // Accounts Collection
    // ========================================
    match /accounts/{accountId} {
      allow get, update, delete: if isOwner();
      allow list: if isQueryingOwnData();
      allow create: if isCreatingOwnData();
    }

    // ========================================
    // Users Collection (Optional Profile Storage)
    // ========================================
    match /users/{userId} {
      allow get, update, delete, create: if request.auth != null && request.auth.uid == userId;
    }

    // --- Add other collection rules below ---

    // Example for quest completions nested under characters
    match /characters/{characterId}/questCompletions/{completionId} {
        allow read, write: if get(/databases/$(database)/documents/characters/$(characterId)).data.userId == request.auth.uid;
    }
    
    // Example for owned packs nested under a user config document
     match /userConfiguration/{userId}/ownedPacksInfo/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}