
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // USERS collection
    // - Allow users to read their own document
    // - Allow users to update their own document (e.g., displayName, iconUrl)
    // - Creation is handled by backend functions/auth context
    match /users/{userId} {
      allow read, update: if isAuthenticated() && isOwner(userId);
      allow create: if isAuthenticated(); // Allow creation for new sign-ups
    }

    // ACCOUNTS collection
    // - Users can create, read, update, and delete their own accounts
    match /accounts/{accountId} {
      allow read, create, update, delete: if isAuthenticated() && isOwner(request.resource.data.userId);
    }

    // CHARACTERS collection
    // - Users can create, read, update, and delete their own characters
    match /characters/{characterId} {
      allow read, create, update, delete: if isAuthenticated() && isOwner(request.resource.data.userId);

      // Quest completions are subcollections of characters
      match /questCompletions/{questId} {
        allow read, create, update, delete: if isAuthenticated() && get(/databases/$(database)/documents/characters/$(characterId)).data.userId == request.auth.uid;
      }
    }
    
    // PUBLIC PROFILES collection
    // - Allow any authenticated user to read public profiles
    // - Allow users to create/update their own public profile
    match /publicProfiles/{userId} {
        allow read: if isAuthenticated();
        allow create, update: if isAuthenticated() && isOwner(userId);
    }
    
    // SUGGESTIONS collection
    // - Allow authenticated users to create suggestions
    // - Allow a user to read their own suggestions
    // - Allow an admin to read any suggestion
    match /suggestions/{suggestionId} {
      allow create: if isAuthenticated();
      allow read, update: if isAuthenticated() && (resource.data.suggesterId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }

    // USER CONFIGURATION (for owned packs)
    match /userConfiguration/{userId}/{document=**} {
      allow read, create, update, delete: if isAuthenticated() && isOwner(userId);
    }

    // LOGS (admin-only write)
    match /Logs/{logCollection}/{document=**} {
        allow read, write: if isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
