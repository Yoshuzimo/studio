rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read and write their own documents in the 'users' collection.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to read public profiles
    match /publicProfiles/{userId} {
      allow get: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow logged-in users to create suggestions for themselves.
    // Admins should be able to read/update/delete any suggestion.
    match /suggestions/{suggestionId} {
      allow create: if request.auth != null && request.resource.data.suggesterId == request.auth.uid;
      // Allow read/write for the user who created it or an admin
      allow read, update: if request.auth != null && (resource.data.suggesterId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
    }
    
    // Allow users to create accounts for themselves
    match /accounts/{accountId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Allow users to manage their own characters
    match /characters/{characterId} {
        allow read, create, update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Allow users to manage their own character's quest completions
    match /characters/{characterId}/questCompletions/{questId} {
       allow read, write, delete: if request.auth != null && get(/databases/$(database)/documents/characters/$(characterId)).data.userId == request.auth.uid;
    }
    
    // Allow users to manage their own configuration, such as owned packs
    match /userConfiguration/{userId}/{path=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }

  }
}
